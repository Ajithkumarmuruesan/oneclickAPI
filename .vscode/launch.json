{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch nodemon",
            "runtimeExecutable": "nodemon",
            "program": "/API/server.js",
            "restart": true,
            "runtimeArgs": ["--inspect"],

            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
